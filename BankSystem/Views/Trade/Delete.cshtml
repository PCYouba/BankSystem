@model BankSystem.Users.Models.UserInfo
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>注销</title>
    <link href="~/Content/Trade/Delete.css" rel="stylesheet" />
</head>
<body>
    <div id="Container">
        <div id="divbuju">
            <br/><br /><br /><br /><br /><br /><br />
            @using (Html.BeginForm("Delete", "Trade", FormMethod.Post))
            {
                <div>
                    账号： @Model.Account.ToString().PadLeft(8, '0')
                </div>
                <div>
                    密码： <input type="password" name="LoginPWD" id="LoginPWD" value="" />
                </div>
                <div id="Button">
                    <input type="submit" value="确定" />
                    &nbsp;&nbsp;
                    <input type="reset" value="重置" />
                </div>
                <div>
                    @ViewBag.error
                </div>
                @Html.ActionLink("返回主菜单", "Menu", "Users")

            }
        </div>
    </div>
</body>
</html>
