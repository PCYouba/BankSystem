@model BankSystem.Users.Models.UserInfo
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>取款</title>
    <link href="~/Content/Trade/OutMoney.css" rel="stylesheet" />
</head>
<body>
    <div id="Container">
    <div id="divbuju">
        <br/>
        @using (Html.BeginForm("OutMoney", "Trade", FormMethod.Post))
        {
            <div>
                账号： @Model.Account.ToString().PadLeft(8, '0')
            </div>
            <div>
                余额： @Html.TextBoxFor(Model => Model.Balance,htmlAttributes:new { @readonly=true})
            </div>
            <div>
                金额： <input type="text" name="yue" id="yue" value="" />
            </div>
            <div>
                密码： <input type="password" name="tradePWD" id="tradePWD" value="" />
            </div>
            @ViewBag.show
            <div id="Button">
                <input type="submit" value="确定" />
                &nbsp;&nbsp;
                <input type="reset" value="重置" />
            </div>
            @Html.ActionLink("返回主菜单", "Menu", "Users")

        }
    </div>
    </div>
</body>
</html>
