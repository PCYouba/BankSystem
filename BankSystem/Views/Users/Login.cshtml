@model BankSystem.Core.Model.LoginInfo
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>用户登录</title>
    <link href="~/Content/Users/Login.css" rel="stylesheet" />
    <script type="text/javascript">

    function ChangeImg()
    {
        var qq = new Date();
        document.getElementById("CheckImg").src = "/Users/CheckCode/?" + qq.getMilliseconds();
    }
    </script>
</head>
<body>
@using (Html.BeginForm("Login", "Users", FormMethod.Post))
{
    <div id="Container"> 
        <div id="LoginName">
            账 号:<input type="text" name="LoginCode" id="LoginCode" value="@Model.Account" />
        </div>
        <div id="LoginPass">
            密 码:<input type="password" name="LoginPWD" id="LoginPWD" value="@Model.pass" />
        </div>         
        <div id="code">
            请 输 入验 证 码：
            <br/>        
            <input type="text" name="CheckCode" />
            <br/>
            <img id="CheckImg" src="/Users/CheckCode" style="width:100px;height:30px;cursor:pointer;" title="看不清?换一张" onclick="ChangeImg()" />
        </div>
        @ViewBag.error
        <div id="Button">
            <input type="submit"value="登陆" />
             &nbsp;&nbsp;
            <input type="reset" value="重置" />
        </div>
        <div id="href">
            @Html.ActionLink("新用户注册", "Reg") 
            <br />
            @Html.ActionLink("转到管理员登陆", "guanliyuan")                     
        </div>
    </div>
}
</body>
</html>
